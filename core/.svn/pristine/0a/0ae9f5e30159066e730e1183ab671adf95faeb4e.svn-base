    $('#gradient_end_color').spectrum({
        showPaletteOnly: false,
        showPalette: false,
        color: selCol,
        clickoutFiresChange: true,
        preferredFormat: "string",
        palette: [defaultEndColors],
        showInput: true

    })
    $('#gradient_end_color').val(selCol).trigger('change');

}
