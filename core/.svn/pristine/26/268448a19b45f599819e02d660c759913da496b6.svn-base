.campaign_container
{
    margin-top: 10px;
    margin-left:10px;
    padding-top: 25px;
    font-family:'Open Sans';
	 
}
.campaign_container .row
{
	margin-left:10px;
	clear:both;
}
.campaign_subtitle
{
    font-size: 18pt;
    color: #5a5a5a;
    margin-top:30px;
}
.campain_header
{
