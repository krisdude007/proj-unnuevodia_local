}
.campaign_form_element 
{
	margin: 5px;
	width: auto;
	float: left;
}
.campaign_form_element .label
{
	font-size:11pt;
	color:#5a5a5a;
	font-weight:500;
	background-color:#ffffff;
}
.errorMessage
{
	color:red;
}

.package_name
{
	font-size:24pt;
	padding-top:20px;
	padding-left:20px;
}

.package_button
{
	height:34px;
	background-color:#2d72d8;
	font-size:14pt;
	text-align:center;
	padding-top:10px;
	color: #ffffff;
}

