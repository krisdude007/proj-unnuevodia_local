{
	background-color:#4d90f3;
}

.package_price
{
	font-size:14pt;
	margin-top:20px;
	margin-bottom:10px;
	padding-left:20px;
}
 
.package_content
{
	font-family: 'Open Sans';
	font-weight: 600;
	font-size: 12pt;
}
.package_content_row
{
	padding: 10px 20px 10px 20px;
}

.package_divider_black
{
	background-image: url('/core/webassets/images/campaign/black-divider.png');
    height:2px;
    width:100%;
}
	
.package_divider_white
{
	background-image: url('/core/webassets/images/campaign/white-divider.png');
    height:2px;
    width:100%;
    padding: 0 20px 0 20px;
}

.toggle_down
{
	background: url('/core/webassets/images/campaign/toggle-down.png') no-repeat center;
    height:8px;
    width: 13px;
    margin-top:20px;
} 
.toggle_up
{
	background: url('/core/webassets/images/campaign/toggle-up.png') no-repeat center;
    height:8px;
    width: 13px;
}
.package_selected
{
	background-color:#4d90f3;
	color:#ffffff;	
	width:330px;
	float:left;
	margin-right:30px;
}

.package_unselected
{
	background-color:#f1f2f2;
	color:#000000;
	width:330px;
	float:left;
	margin-right:30px;
	 
}

.show_cursor
{
	cursor:pointer;
}

