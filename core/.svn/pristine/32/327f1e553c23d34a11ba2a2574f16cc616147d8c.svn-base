body {
    /* width: 100%;
    height: 100%;
    margin: 0px 0px 0px 0px;
    padding: 0px 0px 0px 0px;
   overflow: hidden;*/
    background: rgb(0, 0, 0);
    background: rgba(0, 0, 0, 0.0);
    font-family: Verdana, Arial;
}

.message {
    position: absolute;
    top: calc(50% - 50px);
    width: 100%;
    margin: 0px 0px 0px 0px;
    text-align: center;
    color: #FFFFFF;
    font-size: 25pt;
    font-style: bold;
}

#sliderContainer {
    position: absolute;
    background-color: #0083C1;
    width:100%;
    height: 70px;
    bottom: 0px;
}

#sliderContainer .sliders {
    position: relative;
    height: 50px;
    margin: 10px 0px 0px 0px;
}

#sliderContainer .sliders .slider {
    float: left;
    height: 50px;
    margin: 0px 50px 0px 0px;
    background-color: #178DC7;
}

.votegraphBG{
    width:480px;
    display: inline-block;
    /*float:right;*/
    margin-top:5px;
    background-color: #ededed;
    border: 1px solid #D6D5D3;
}

.voteLabels{
    margin-top:10px;
    font-size:20px;
    text-transform:uppercase;
}
.voteButtons
{
	width:147px;
}

.vote_footer
{font-size:15px; background-color:#000000; color:#000000; height: 37px; padding-top:9px;}

.vote_buttons
{
	margin-top:20px;
}
.vote_div
{
	background-color: #0030a8;
	margin-right:20px;
	padding-top:20px;
	font-size:12px;
}

.vote_div .progress
{
	background-color:#ffffff;
	height:6px;
	overflow:none;
	margin-left:-1px;
	width:100% !important;
	border-radius:0px;
}

.vote_div .vote_label
{
	 background-color: #0030a8;
	 margin-bottom:0px;
	 border:none;
	 height:20px;
	 width:100%;
	 color:#ffffff;
	 font-size:12px !important;
}

.vote_div .progress-bar-info
{
	background-color:#1793d0;
}

.linkButton {
    border:0px;
    width:152px;
    height: 23px;
    background-color: #000;
    display:inline-block;
    color:#007a38;
    font-weight: 100;
    padding:6px 10px;
    margin: 5px;
    text-decoration:none;
    text-align: center;
    /*text-shadow:1px 1px 0px #528ecc;*/
}
.linkButton:hover {

}
.linkButton:active {
    position:relative;
    top:1px;
}
.linkButton:visited {
    position:relative;
    top:1px;
}

#sliderContainer .sliders .slider .avatar {
    float: left;
    width: 50px;
    height: 50px;
    margin: 0px 0px 0px 0px;
}

#sliderContainer .sliders .slider .avatar img {
    width: 50px;
    height: 50px;
    margin: 0px 0px 0px 0px;
}

#sliderContainer .sliders .slider .text {
    float: left;
    height: 50px;
    margin: 10px 10px 0px 10px;
    text-align: left;
    text-height: 100%;
    font-size: 9pt;
}

