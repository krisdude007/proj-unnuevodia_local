/*  adminvideo.css -- stylesheet for adminvideo view  */

#admin_video_player_wrapper {
    /* force size to prevent collapse/non-display issue */
    width:700px;
    height:400px;
    margin:auto;
    margin-top:20px;
}

.admin_video_list {
    margin:20px;
}

.admin_video_category {
    margin-bottom:20px;
}

.admin_video_category_name {
}

.admin_video_item {
    display:inline-block;
    margin:0 10px 20px 0;
    padding:5px;
    background:#ddd;
}

.admin_video_display_name {
    display:block;
    margin-bottom:5px;
}

.admin_video_thumb {
    width:160px;
    height:auto;
}

h1 {
    /* todo */
    margin:0;
    font-size:1.5em;
}

h2 {
    margin:25px 0 10px 0;
    font-size:1.3em;
}
