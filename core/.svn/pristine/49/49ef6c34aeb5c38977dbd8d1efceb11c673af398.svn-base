    public function actionDemographic($startDate = null, $endDate = null, $request = null) {
        $startDate = DateTimeUtility::getStartDate($startDate);
        $endDate = (is_null($endDate) || $endDate == '') ? date("Y-m-d") : $endDate;
        ini_set('memory_limit', '512M');
