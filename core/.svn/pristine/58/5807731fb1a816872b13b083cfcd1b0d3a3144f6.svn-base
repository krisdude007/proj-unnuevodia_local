/***
Glyphicons icons
***/
.fab-btn > .halflings-icon {
  margin-top:2px;
  margin-right: 2px;
}

.fab-btn.mini > .halflings-icon {
  margin-top: -1px;
  margin-right: 2px;
}

.fab-btn.icn-only > .halflings-icon {
  margin-right: 0px !important;
} 

/***
Dropdowns
***/
.fab-dropdown-menu {
  position: absolute;
  top: 56px;
  z-index: 1000;
  display: none;
  float: left;
  list-style: none;
  text-shadow: none;
  padding: 0px;
  margin:0px;
  -webkit-box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);  
  font-size: 14px;
  font-family: "Segoe UI",Helvetica, Arial, sans-serif;
  border: 1px solid #ddd;
}
.fab-user .fab-dropdown-menu{
    left:-51px;
}
#fab-header_notification_bar .fab-dropdown-menu{
    left:-105px;
    width:250px;
}
#header_search .fab-dropdown-menu{
    left:-105px;
}
.fab-dropdown:hover .caret, 
.open.fab-dropdown .caret {
  opacity: 1;
  filter: alpha(opacity=100);
}

.fab-dropdown-menu.bottom-up {
  top: auto;
  bottom: 100%;
  margin-bottom: 2px;
}

.fab-dropdown-menu li > a {
  padding: 6px 0 6px 13px;
  color: #333;
  text-decoration: none;
  display: block;
  clear: both;
  font-weight: normal;
  line-height: 18px;
  white-space: nowrap;
}

.fab-dropdown-menu li > a:hover, 
.fab-dropdown-menu .fab-active > a, 
.fab-dropdown-menu .fab-active > a:hover {
  text-decoration: none;
  background-image: none;
  color: #333;
  filter:none;
    background-color: #eee;
}

.fab-dropdown.open .fab-dropdown-toggle {
background:none !important;
}

