        $videos['Facebook Video Submissions'] = eVideo::model()->processed()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'facebook'));
        $videos['Mobile Video Submissions'] = eVideo::model()->processed()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'mobile'));
        $videos['Unique Users to Record'] = eVideo::model()->processed()->filterByWeek($startDate)->findAll(array('group' => 'user_id'));
