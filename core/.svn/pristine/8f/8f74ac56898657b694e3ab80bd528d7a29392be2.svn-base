        $videos['Videos Deleted'] = eVideo::model()->processed()->filterByWeek($startDate)->findAllByAttributes(Array('status' => 'denied'));
        $videos['Total Video Views'] = eVideoView::model()->filterByWeek($startDate)->findAll();
        
        $photos['Web Photo Submissions'] = eImage::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'web'));
        $photos['Facebook Photo Submissions'] = eImage::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'facebook'));
        $photos['Mobile Photo Submissions'] = eImage::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'mobile'));
        $photos['Unique Users to Record'] = eImage::model()->filterByWeek($startDate)->findAll(array('group' => 'user_id'));
        
        $photos['Photos Not Accepted'] = eImage::model()->filterByWeek($startDate)->findAllByAttributes(Array('status' => 'new'));
        $photos['Photos Deleted'] = eImage::model()->filterByWeek($startDate)->findAllByAttributes(Array('status' => 'denied'));
        $photos['Total Photo Views'] = eImageView::model()->filterByWeek($startDate)->findAll();
        
        $votes['Web Votes'] = ePollResponse::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'web'));
        $votes['Facebook Votes'] = ePollResponse::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'facebook'));
        $votes['Mobile Votes'] = ePollResponse::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'mobile'));
        $votes['Twitter Votes'] = ePollResponse::model()->filterByWeek($startDate)->findAllByAttributes(Array('source' => 'twitter'));
       
        $totals['New Registered Users'] = eUser::model()->filterByWeek($startDate)->findAll();
        $totals['Video Submissions'] = eVideo::model()->filterByWeek($startDate)->findAll();
        $totals['Photo Submissions'] = eImage::model()->filterByWeek($startDate)->findAll();
        $totals['Voting Participation'] = ePollResponse::model()->filterByWeek($startDate)->findAll();
        $totals['Total Video Views'] = eVideoView::model()->filterByWeek($startDate)->findAll();
        
        $lastWeek = date('Y-m-d', strtotime($startDate." - 1 week"));
        $lastWeekTotals['New Registered Users'] = eUser::model()->filterByWeek($lastWeek)->findAll();
        $lastWeekTotals['Video Submissions'] = eVideo::model()->filterByWeek($lastWeek)->findAll();
        $lastWeekTotals['Photo Submissions'] = eImage::model()->filterByWeek($lastWeek)->findAll();
        $lastWeekTotals['Voting Participation'] = ePollResponse::model()->filterByWeek($lastWeek)->findAll();
        $lastWeekTotals['Total Video Views'] = eVideoView::model()->filterByWeek($lastWeek)->findAll();
         
        $collection['User Data'] = $users;
        $collection['Video Participation'] = $videos;
        
        $url = 'http://' . $_SERVER['SERVER_NAME'] . $_SERVER['REQUEST_URI'];
        
        if (strpos($url,'zee') !== false || strpos($url,'talk') !== false) {
        $collection['Voting Participation'] = $votes;
        $collectionTotals['thisWeek'] = $totals;
        $collectionTotals['lastWeek'] = $lastWeekTotals;
        } else {
        $collection['Photo Participation'] = $photos;
        $collection['Voting Participation'] = $votes;
        $collectionTotals['thisWeek'] = $totals;
        $collectionTotals['lastWeek'] = $lastWeekTotals; 
        }
        $weekBefore = date('Y-m-d', strtotime($startDate.' - 1 week'));
        $ymd = explode("-", $weekBefore);
        $startingIndexDay = $ymd[2];
        foreach(eAnalytics::pullData($weekBefore, date('Y-m-d', strtotime($startDate.' + 1 week'))) as $gapiReportEntry){
            $temp = $gapiReportEntry->getDimesions();
            $associative[$temp['day']][$temp['visitorType']] = $gapiReportEntry->getMetrics();
        }
        //array_split wont work on associative array
        //put the starting day at the front of the array since google's order by day uses the number and not the date(stupid)
        $gotToStartIndex = false;
        foreach($associative as $day => $record){
            if($day == $startingIndexDay)
                $gotToStartIndex = true;
            if($gotToStartIndex)
                $analyticsTotals[] = $record;
        }
        $gotToStartIndex = false;
        foreach($associative as $day => $record){
            if($day == $startingIndexDay)
                $gotToStartIndex = true;
            if(!$gotToStartIndex)
                $analyticsTotals[] = $record;
        }
        $this->render('weekly', Array(
            'startDate' => $startDate,
            'collection' => $collection,
            'collectionTotals' => $collectionTotals,
            'analyticsTotals' => $analyticsTotals,
        ));
    }
    
    public function actionQuestionReport(){
        $criteria = new CDbCriteria;
