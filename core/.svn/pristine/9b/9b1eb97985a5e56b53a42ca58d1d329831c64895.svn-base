table{
    border-collapse:collapse;
}
th {
    padding:3px;
    border:1px solid black;
    color:#000;
}
td {
    padding:3px;
    border:1px solid black;
    color:#FFF;        
}
a{
    color:#FFF;
    text-decoration:none;
}
a:hover{
    text-decoration:underline;
}
.grey{color:#999}
.active{background:#0C0 !important;}
.active td{background:#0C0}
.active td td{background:transparent;}
.active a{color:#000 !important;}
.active td a{color:#000 !important;}    
.active td.sorting_1{background:#0C0 !important}
.errorMessage{color:red}
.fab-voting-right{background:#CCC;padding:20px;width:500px}
.bold{font-weight:900}