.campaign_container
{
    margin-top: 10px;
    margin-left:10px;
    padding-top: 25px;
    font-family:'Open Sans';
	 
}
.campaign_subtitle
{
    font-size: 18pt;
    color: #5a5a5a;
    margin-top:30px;
}
.campain_header
{
	font-size: 31pt;
	color: #4d90f3;
	font-weight: bold;
	margin-bottom: 30px;
}

.campaign_top_bar
{
    background-color: #4d90f3;
    height: 40px;
    padding-left:30px;
    padding-top: 15px;
    color: #ffffff;
    font-size: 14pt;
    clear:both;
    margin-bottom: 10px;
}

.campaign_top_bar img
{
    margin-right : 20px;
}

