.flashes{
    text-align:center;
    font-size:14px;
}
.flash-error{
    padding:3px 0px 3px 0px;
    background:#F00;
    color:#FFF;
}
.flash-success{
    padding:3px 0px 3px 0px;
    background:#019fde;
    color:#000;
}
.flash-message{
    padding:3px 0px 3px 0px;
    background:#FF0;
    color:#000;
}


/* the overlayed element */
#sessionDurationOverlay {

  /* must be initially hidden */
  display:none;

  /* place overlay on top of other elements */
  z-index:10000;

  /* styling */
  background-color: rgba(255, 255, 255, 0.6);

  width:400px;
  min-height:200px;
  border: 0 !important;

  /* CSS3 styling for latest browsers */
  -moz-box-shadow:0 0 90px 5px #000;
  -webkit-box-shadow: 0 0 90px #000;
  color: #fff;
}

/* close button positioned on upper right corner */
#sessionDurationOverlay .close {
  background-image:url('/core/webassets/images/close.png');
  position:absolute;
  right:-15px;
  top:-15px;
  cursor:pointer;
  height:35px;
  width:35px;
}

#sessionDurationOverlayContent {
  padding: 0 10px 10px 10px;
}

#sessionRefresh {
    float: left;
}

#sessionExpire {
    float: right;
}