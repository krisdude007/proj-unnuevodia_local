.videoThumb {
  width: 179px; 
  height: 101px; 
  background: #292929;
}

.ui-autocomplete-loading {
  background: white url('/core/webassets/images/ui-anim_basic_16x16.gif') right center no-repeat;
}

.fab-detail-videos {
  margin-top: 0px;
  padding-top: 0px;
}


.videoModalContent {
  padding: 0 10px 10px 10px;
}



/* the overlayed element */
.videoModal {

  /* must be initially hidden */
  display:none;

  /* place overlay on top of other elements */
  z-index:10000;

  /* styling */
  background-color: rgba(255, 255, 255, 0.6);

  width:880px;
  min-height:700px;
  border: 0 !important;

  /* CSS3 styling for latest browsers */
  -moz-box-shadow:0 0 90px 5px #000;
  -webkit-box-shadow: 0 0 90px #000;
}

/* close button positioned on upper right corner */
.videoModal .close {
  background-image:url('/core/webassets/images/close.png');
  position:absolute;
  right:-15px;
  top:-15px;
  cursor:pointer;
  height:35px;
  width:35px;
}



.video-duration {
  position: absolute;
  top: 138px;
  width: 179px;
  text-align: right;
  background-color: #000;
  opacity: 0.8;
  color: #fff;
  left: 14px;
  font-size: 11px;
}

