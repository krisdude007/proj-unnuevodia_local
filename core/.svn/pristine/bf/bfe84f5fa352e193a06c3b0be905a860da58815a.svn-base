        }
        $destination = eDestination::model()->findByAttributes(Array('destination' => 'twitter'));
        $text = "";
        switch ($type) {
            case 'question':
                $question = eQuestion::model()->findByPK($id);
                $text = $question->question.' #'.$question->hashtag;
                $dest = new eQuestionDestination;
                $dest->question_id = $id;
