    if($("#fab-advanced-filtering").hasClass('fab-show')){
      $("#fab-advanced-filtering").removeClass('fab-show');
      $("#fab-advanced-filtering").addClass('fab-hide');
                        
      $(".fab-form-right").css('height','115px');
