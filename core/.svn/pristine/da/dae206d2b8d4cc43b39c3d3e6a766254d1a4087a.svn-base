#fab-video-filter-form {
    max-width: 916px;
    margin-top: 20px;
    margin-bottom: 10px;
    border: 1px solid #ABA9A9;
    height: 190px;
}

.fab-b-left {
    border-left: 1px solid #ABA9A9;
    height: 170px;
    margin-top: 1px;
}

/* the overlayed element */
#videoImportOverlay {

  /* must be initially hidden */
  display:none;

  /* place overlay on top of other elements */
  z-index:10000;

  /* styling */
  background-color: rgba(255, 255, 255, 0.6);

  width:400px;
  min-height:200px;
  border: 0 !important;

  /* CSS3 styling for latest browsers */
  -moz-box-shadow:0 0 90px 5px #000;
  -webkit-box-shadow: 0 0 90px #000;
  color: #fff;
}

#videoUploadOverlay {

  /* must be initially hidden */
  display:none;

  /* place overlay on top of other elements */
  z-index:10000;

  /* styling */
  background-color: rgba(255, 255, 255, 0.6);

  width:600px;
  min-height:300px;
  border: 0 !important;

  /* CSS3 styling for latest browsers */
  -moz-box-shadow:0 0 90px 5px #000;
  -webkit-box-shadow: 0 0 90px #000;
  color: #fff;
}

/* close button positioned on upper right corner */
#videoImportOverlay .close {
  background-image:url('/core/webassets/images/close.png');
  position:absolute;
  right:-15px;
  top:-15px;
  cursor:pointer;
  height:35px;
  width:35px;
}

#videoUploadOverlay .close {
  background-image:url('/core/webassets/images/close.png');
  position:absolute;
  right:-15px;
  top:-15px;
  cursor:pointer;
  height:35px;
  width:35px;
}

#videoUploadOverlayContent, #videoImportOverlayContent {
  padding: 0 10px 10px 10px;
}


.videoThumb {
  width: 179px;
  height: 105px;
  background: #292929;
}

.ui-autocomplete-loading {
  background: white url('/core/webassets/images/ui-anim_basic_16x16.gif') right center no-repeat;
}

.fab-detail-videos {
  margin-top: 0px;
  padding-top: 0px;
}


.videoModalContent {
  padding: 0 10px 10px 10px;
}



/* the overlayed element */
.videoModal {

  /* must be initially hidden */
  display:none;

  /* place overlay on top of other elements */
  z-index:10000;

  /* styling */
  background-color: rgba(255, 255, 255, 0.6);

  width:980px;
  min-height:700px;
  border: 0 !important;

  /* CSS3 styling for latest browsers */
  -moz-box-shadow:0 0 90px 5px #000;
  -webkit-box-shadow: 0 0 90px #000;
}

/* close button positioned on upper right corner */
.videoModal .close {
  background-image:url('/core/webassets/images/close.png');
  position:absolute;
  right:-15px;
  top:-15px;
  cursor:pointer;
  height:35px;
  width:35px;
}



.video-duration {
  position: absolute;
  top: 138px;
  width: 179px;
  text-align: right;
  background-color: #000;
  opacity: 0.8;
  color: #fff;
  left: 14px;
  font-size: 11px;
}




#fab-import-button, #fab-advanced-button, .fab-import-source-button, #fab-upload-video-button {
  padding-left     : 10px;
  padding-right    : 10px;
  padding-top      : 4px;
  padding-bottom   : 4px;
  color            : white;
  border           : 0;
  width            : 140px;
  margin-top       : 29px;
  margin-left      : 20px;
  background-color : #D0CFCF;
  cursor           : pointer;
  height           : 34px;
}

.fab-import-source-button:hover {
  background-color : #ff0000;
}

.fab-form-right {
  display: inline-block;
  float: right;
  min-height: 115px;
  vertical-align: middle;
  width: 180px;
  padding-top:10px;
  padding-bottom:10px;
  padding-right: 10px;
  padding-left:21px;
}
.fab-select-episode {
  width: 228px;
}
.fab-select-show {
  width: 135px;
}
.fab-select-question {
  width: 352px;
}
.fab-select-accept {
  width: 125px;
}

#selectall {
  border           : 0px;
  -moz-appearance  : none;
  background:url('/core/webassets/images/selectall.png') no-repeat;
  width:21px;
  height:19px;
  color            : white;

}

