<?php

/**
 * This is the model class for table "user_phone".
 *
 * The followings are the available columns in table 'user_phone':
 * @property integer $id
 * @property integer $user_id
 * @property string $number
 * @property string $type
 * @property string $created_on
 * @property string $updated_on
 *
 * The followings are the available model relations:
 * @property User $user
 */
class eUserPhone extends UserPhone
{
	public function rules()
	{
		// NOTE: you should only define rules for those attributes that
		// will receive user inputs.
		return array(
			array('user_id, number', 'required'),
                        array('created_on,updated_on', 'default', 'value' => new CDbExpression('NOW()'),'setOnEmpty'=>false,'on' => 'insert'),
                        array('type', 'default', 'value' => 'primary','on' => 'insert'),
                        array('updated_on', 'default', 'value' => new CDbExpression('NOW()'),'setOnEmpty'=>false,'on' => 'update'),                                            
			array('user_id', 'numerical', 'integerOnly'=>true),
			array('number, type', 'length', 'max'=>255),
			// The following rule is used by search().
			// @todo Please remove those attributes that should not be searched.
			array('id, user_id, number, type, created_on, updated_on', 'safe', 'on'=>'search'),
		);
	}
        
        public function beforeSave(){
            $phones = self::model()->updateAll(Array('type'=>'',"user_id='{$this->user_id}'"));            
        }

	public function attributeLabels()
	{
		return array(
			'id' => 'ID',
			'user_id' => 'User',
			'number' => 'Phone Number',
			'type' => 'Type',
			'created_on' => 'Created On',
			'updated_on' => 'Updated On',
		);
	}        
        
	public function relations()
	{
		// NOTE: you may need to adjust the relation name and the related
		// class name for the relations automatically generated below.
		return array(
			'user' => array(self::BELONGS_TO, 'eUser', 'user_id'),
		);
	}

	public static function model($className=__CLASS__)
	{
		return parent::model($className);
	}
}
