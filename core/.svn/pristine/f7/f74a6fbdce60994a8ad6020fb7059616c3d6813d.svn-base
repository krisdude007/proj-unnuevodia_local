#fab-ticker-filter-form {
    max-width         : 920px;
    height        : 58px;
    border        : 1px solid #ABA9A9;
    margin-bottom : 20px;
}

#fab-ticker-filter-form .fab-filter {
    text-align  : center;
    margin-top  : 13px;
    margin-left : 12px;
    border      : 0px;
    cursor      : pointer;
    height      : 34px;
    color       : white;
    font-size   : 14px;
    font-family : "Open Sans", sans-serif;
    font-weight : normal;
    width:auto;
    padding-left:14px;
    padding-right:14px;
}
#fab-ticker-filter-form .fab-filter.fab-first{
    margin-left:28px;
}
.fab-form-right-ticker {
    display        : inline-block;
    float          : left;
    border-left    : 1px solid #ABA9A9;
    padding-bottom : 12px;
    padding-left   : 23px;
    padding-top    : 13px;
    margin-left: 23px;
}

.subtitle2 td{
    font-weight:bold;
}

.subtitle2{
    background-color:#efedee;
}

.fab-tools{
    display:none !important;
}

.ui-daterangepickercontain{font-size: 10px;}
#GAdateRange {width: 269px; margin:4px; display: block; float:left;}
.ui-datepicker-current-day > a{color:#fff !important; background:#F6A828 !important;}
.ui-datepicker-today > a {font-weight:bold;}
.fab-third{margin-right:18px; margin-left:0px !important;}
.fab-reports-container{max-width: 100%}

#analyticBlocker, #socialSearchBlocker{
    background-image: url('/core/webassets/images/shadow.png');
    width: 287px;
    height: 439px;
    position: absolute;
    color:#fff;
    font-size:30px;
    text-align: center;
    font-weight: bold;
    padding-top:120px;
}
#socialSearchBlocker{
    height: 230px;
}

.dtStyle{
    border-collapse:collapse;
    width:100%;
}
.dtStyle th {
    padding:3px;
    border:1px solid black;
    color:white;
    background-image: -webkit-gradient(
	linear,
	left top,
	left bottom,
	color-stop(0, #85bad8),
	color-stop(1, #4c99c5)
    );
    background-image: -o-linear-gradient(bottom, #85bad8 0%, #4c99c5 100%);
    background-image: -moz-linear-gradient(bottom, #85bad8 0%, #4c99c5 100%);
    background-image: -webkit-linear-gradient(bottom, #85bad8 0%, #4c99c5 100%);
    background-image: -ms-linear-gradient(bottom, #85bad8 0%, #4c99c5 100%);
    background-image: linear-gradient(to bottom, #85bad8 0%, #4c99c5 100%);
}

.dtStyle td {
    padding:3px;
    border:1px solid black;
}
.dtStyle tr:nth-child(odd){
    background-color:#E5F1F4;
}

.dtStyle tr:nth-child(even){
    background-color:#F8F8F8;
}

.dtStyle tr:hover{
    background-color:#ECFBD4;
}

