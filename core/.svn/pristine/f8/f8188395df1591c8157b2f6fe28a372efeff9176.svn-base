body {
    width: 100%;
    height: 100%;
    margin: 0px 0px 0px 0px;
    padding: 0px 0px 0px 0px;
    overflow: hidden;
    background-color: #000000;
    
    font-family: Verdana, Arial;
}

.message {
    position: absolute;
    top: calc(50% - 50px);
    width: 100%;
    margin: 0px 0px 0px 0px;
    text-align: center;
    color: #FFFFFF;
    font-size: 25pt;
    font-style: bold;
}

#sliderContainer {
    position: absolute;
    background-color: #0083C1;
    width:100%;
    height: 70px;
    bottom: 0px;
}

#sliderContainer .sliders {
    position: relative;
    height: 50px;
    margin: 10px 0px 0px 0px;
}

#sliderContainer .sliders .slider {
    float: left;
    height: 50px;
    margin: 0px 50px 0px 0px;
    background-color: #178DC7;
}

#sliderContainer .sliders .slider .avatar {
    float: left;
    width: 50px;
    height: 50px;
    margin: 0px 0px 0px 0px;
}

#sliderContainer .sliders .slider .avatar img {
    width: 50px;
    height: 50px;
    margin: 0px 0px 0px 0px;
}

#sliderContainer .sliders .slider .text {
    float: left;
    height: 50px;
    margin: 10px 10px 0px 10px;
    text-align: left;
    text-height: 100%;
    font-size: 9pt;
}